<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/Output"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"

        android:textSize="34sp"
        android:gravity="bottom|end"

        />

    <View
        android:layout_width="365dp"
        android:layout_height="3dp"
        android:background="@color/black"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center_horizontal"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        >


        <Button
            android:layout_margin="2dp"
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:textColor="@color/white"
            android:text="@string/n7"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"
            />

        <Button
            android:layout_margin="2dp"
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/n8"
            android:onClick="onDigit"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"



            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/n9"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"
            android:onClick="onDigit"



            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/button_Divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/divide"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:onClick="onDigit"
            android:textSize="25sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        >


        <Button
            android:layout_margin="2dp"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:textColor="@color/white"
            android:text="@string/n4"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"
            />

        <Button
            android:layout_margin="2dp"
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/n5"
            android:onClick="onDigit"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"



            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/n6"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"
            android:onClick="onDigit"



            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/button_Mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/mul"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:onClick="onDigit"
            android:textSize="25sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        >


        <Button
            android:layout_margin="2dp"
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:textColor="@color/white"
            android:text="@string/n1"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"
            />

        <Button
            android:layout_margin="2dp"
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/n2"
            android:onClick="onDigit"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"



            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/n3"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"
            android:onClick="onDigit"



            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/min"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:onClick="onDigit"
            android:textSize="25sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        >


        <Button
            android:layout_margin="2dp"
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="onDigit"
            android:textColor="@color/white"
            android:text="@string/num0"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"
            />

        <Button
            android:layout_margin="2dp"
            android:id="@+id/button_decimalr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/decimal"
            android:onClick="onDecimalPoint"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"



            />
        <Button
            android:layout_margin="2dp"
            android:id="@+id/Plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/Plus"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"
            android:onClick="onDigit"



        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        >


        <Button
            android:layout_margin="2dp"
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:onClick="onDigit"
            android:textColor="@color/white"
            android:text="@string/Equals"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"
            />

        <Button
            android:layout_margin="2dp"
            android:id="@+id/button_clr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/clr"
            android:onClick="onCLear"
            android:background="@drawable/borders"
            app:backgroundTint="@color/black"
            android:textSize="25sp"



            />



    </LinearLayout>






</LinearLayout>